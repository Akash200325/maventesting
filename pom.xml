<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.2.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.2.0 https://maven.apache.org/xsd/settings-1.2.0.xsd">
  
  <!-- Repository Configuration (Maven Central) -->
  <mirrors>
    <!-- Mirror to use Maven Central for downloading dependencies -->
    <mirror>
      <id>central</id>
      <mirrorOf>central</mirrorOf>
      <name>Central Repository</name>
      <url>https://repo.maven.apache.org/maven2</url>
      <blocked>false</blocked>
    </mirror>
    
    <!-- Optional: Unblock HTTP if needed -->
    <mirror>
      <id>maven-default-http-blocker</id>
      <mirrorOf>external:http:*</mirrorOf>
      <name>Pseudo repository to mirror external repositories initially using HTTP.</name>
      <url>http://0.0.0.0/</url>
      <blocked>true</blocked>
    </mirror>
  </mirrors>

  <!-- Proxy Configuration (Optional, uncomment if needed) -->
  <proxies>
    <proxy>
      <id>example-proxy</id>
      <active>true</active>
      <protocol>http</protocol>
      <username>proxyuser</username>
      <password>proxypass</password>
      <host>proxy.example.com</host>
      <port>8080</port>
      <nonProxyHosts>www.google.com|*.example.com</nonProxyHosts>
    </proxy>
  </proxies>

  <!-- Servers Configuration (Optional for authentication) -->
  <servers>
    <!-- Define authentication credentials for your deployment or other servers if needed -->
    <server>
      <id>deploymentRepo</id>
      <username>repouser</username>
      <password>repopwd</password>
    </server>
  </servers>

  <!-- Profile Configuration (Optional) -->
  <profiles>
    <!-- Define build profiles for different environments if needed -->
    <profile>
      <id>dev</id>
      <activation>
        <property>
          <name>env</name>
          <value>dev</value>
        </property>
      </activation>
      <properties>
        <configPath>/path/to/dev/config</configPath>
      </properties>
    </profile>
  </profiles>

  <!-- Active Profiles (Optional) -->
  <activeProfiles>
    <activeProfile>dev</activeProfile>
  </activeProfiles>

  <!-- Increase Timeout (Optional) -->
  <profiles>
    <profile>
      <id>default</id>
      <properties>
        <http.connection.timeout>60000</http.connection.timeout> <!-- Increase timeout to 60s -->
      </properties>
    </profile>
  </profiles>
</settings>
